<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- <link href="../css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <!-- <link href="../css/styles.css" rel="stylesheet"> -->
    <title>Document</title>
</head>

<body>
    <!-- Nav bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <!-- End: Nav bar -->
    <!-- Container -->
    <div class='container'>
        <h2>Student Management</h2>
        <hr>
        <% if(errors != undefined){ %>
            <ul class="alert alert-danger">
                <%  errors.forEach(function(error){ %>
                    <li>
                        <%= error.msg %>
                    </li>
                <% }) %>
            </ul>
            <%}%>
            <!-- Student Add Form -->
            <form method="post" action="/">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" placeholder="Type your name" class="form-control">
                </div>
                <div class="form-group">
                    <label>Course</label>
                    <input type="text" name="course" placeholder="Type your course name" class="form-control">
                </div>
                <input type="submit" value="Add Student" class="btn btn-primary">
            </form>
            <br>
            <!-- End: Student Add Form -->
            <table class="table">
                <% if(students){ %>
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Course</th>
                            <th></th>
                        </tr>
                    </thead>
                    <% students.forEach(function(student){ %>
                        <tr class="active">
                            <td>
                                <%= student.name %>
                            </td>
                            <td>
                                <%= student.course %>
                            </td>
                            <td>
                                <a href="/<%= student._id%>">X</a>
                            </td>
                        </tr>
                    <% }) } %>
            </table>
            <!-- End: Student listing table -->
    </div>
    <!-- End: Container -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>
</html>